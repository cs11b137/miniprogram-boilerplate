/* components/loading/loading.wxss */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .spinner {
    margin-bottom: 20rpx;
    width: 60rpx;
    height: 60rpx;
    position: relative;
  }
  
  .spinner view {
    position: absolute;
    width: 8rpx;
    height: 24rpx;
    background: var(--color-primary);
    border-radius: 4rpx;
    animation: spinner 1s infinite ease;
  }
  
  @keyframes spinner {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }