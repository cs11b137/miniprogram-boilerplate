/* 重置默认样式 */
page {
    height: 100%;
    font-size: 28rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  
  view,
  text,
  icon,
  progress,
  checkbox-group {
    box-sizing: border-box;
  }
  
  /* 定义通用变量 */
  :root {
    --color-primary: #07c160;
    --color-secondary: #f5f5f5;
  }